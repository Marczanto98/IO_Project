<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Kontakt"
                android:textColor="@color/gray"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

            <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Telefoniczna informacja pacjenta"
            android:textColor="@color/gray"
            android:textSize="19dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
                android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/layout"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/callNFZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/call" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800 190 590"
                android:textSize="18dp"
                android:layout_marginLeft="60dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="265dp"
            android:layout_height="4dp"
            app:srcCompat="@drawable/line_8"
            android:layout_below="@+id/layout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Kontakt dla osób przebywających\npoza granicami kraju"
            android:textColor="@color/gray"
            android:textSize="19dp"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/callFromAbroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/call" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 125 66 00"
                android:textSize="18dp"
                android:layout_marginLeft="60dp"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>