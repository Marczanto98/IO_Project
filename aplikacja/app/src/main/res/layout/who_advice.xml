<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porady WHO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bold"
        android:textSize="22dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="180dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/virus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_top"
                android:fontFamily="@font/bold"
                android:text="Czym jest COVID-19?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/protect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_center"
                android:fontFamily="@font/bold"
                android:text="Jak się zabezpieczyć?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/spread"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_center"
                android:fontFamily="@font/bold"
                android:text="Jak wirus się rozprzestrzenia?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/kids"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_center"
                android:fontFamily="@font/bold"
                android:text="Czy dzieci mogą\nsię zarazić?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>

            <Button
                android:id="@+id/antybiotics"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_center"
                android:fontFamily="@font/bold"
                android:text="Czy jest lekarstwo na COVID-19?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>


            <Button
                android:id="@+id/shopping"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:width="125dp"
                android:height="56dp"
                android:background="@drawable/button_bottom"
                android:fontFamily="@font/bold"
                android:text="Jak robić zakupy spożywcze?"
                android:textColor="@color/gray"
                android:textSize="12dp"></Button>

        </LinearLayout>

        <ScrollView
            android:layout_width="215dp"
            android:layout_height="540dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/border"
            android:layout_marginRight="40dp"
            android:textSize="16dp"
            android:text=""
            android:padding="10dp"
            android:id="@+id/info_scroll">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/info"
                android:textSize="16dp"
                android:text="To ostra choroba zakaźna układu oddechowego wywołana zakażeniem wirusem SARS-CoV-2. Jest to wirus RNA osłonięty błoną tłuszczową (lipidową). Dzięki takiej budowie można mu zapobiegać przez zastosowanie środków chemicznych, takich jak zwykłe mydło, alkohol min. 60-70%, preparaty do dezynfekcji i inne wirusobójcze."></TextView>

            </ScrollView>


    </LinearLayout>
</RelativeLayout>