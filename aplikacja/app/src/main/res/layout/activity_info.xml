<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/bold"
        android:text="Informacje"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aktualne zasady i ograniczenia"
        android:layout_below="@+id/info"
        android:id="@+id/now"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_marginTop="30dp"></TextView>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="@drawable/line_8"
        android:layout_below="@+id/now"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"></ImageView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_below="@+id/bar"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/bar2"
        android:background="@drawable/line_8"
        android:layout_below="@+id/recyclerView"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar2"
        android:text="WiÄ™cej informacji na stronie:"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:id="@+id/txt"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:text="www.gov.pl/web/koronawirus"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="@color/red"
        android:id="@+id/gov"></Button>
</RelativeLayout>